@model NaturalCosmetics.ViewModels.LoginViewModel
@{
        ViewData["Title"] = "Login";
    }
    <div class="row">
        <div class="col-md-6">
            <h2>Đăng nhập</h2>
            <br />
            <div asp-validation-summary="ModelOnly"></div>
            <form asp-controller="Account" asp-action="Login" method="post" class="login">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <p class="form-group">
                    <label asp-for="EmailOrUsername"></label>
                    <input asp-for="EmailOrUsername" class="form-control" />
                </p>
                <p class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                </p>
                <p class="lost_password">
                    <label asp-for="RememberMe">
                        <input asp-for="RememberMe" />
                        @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </p>

                @*<p style="width: 29%;margin : 0 auto" class="form-row">
            <input type="submit" class="button" name="login" value="Đăng nhập" />
        </p>*@
                <button class="btn buy-now-btn" name="login">Đăng nhập</button>

            </form>
        </div>
    </div>
@{
}
